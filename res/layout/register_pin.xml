<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/sixteen"
        android:layout_marginBottom="@dimen/sixteen"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_not_registered_with_pin"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sixteenScaled"
            android:layout_marginBottom="@dimen/sixteen"
            android:gravity="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/eight"
            android:paddingRight="@dimen/eight">

            <Button
                android:id="@+id/pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/register_for_pin"
                android:background="@drawable/approve_otp_button"
                android:layout_marginRight="@dimen/eight"
                style="@style/approve_otp" />

            <Button
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/use_sms_otp"
                android:layout_marginLeft="@dimen/eight"
                android:background="@drawable/approve_otp_button"
                style="@style/approve_otp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/amitkumar/AndroidStudioProjects/Scanner/CustomBrowser/res/layout/register_pin.xml -->